<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.smackmap.smackmapandroid" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name=".config.AppContext"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Smackmapandroid"
        android:usesCleartextTraffic="true" >
        <activity
            android:name=".ui.main.smack.AddSmackActivity"
            android:exported="false" />
        <activity
            android:name=".ui.main.smackspot.AddSmackSpotActivity"
            android:exported="false" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyAeG7Lf6DijIiQKL6I0wlJBKssM4a47a4I" />

        <activity
            android:name=".ui.login.LoginActivity"
            android:exported="true"
            android:theme="@style/splashScreenTheme"
            android:windowSoftInputMode="adjustResize|adjustPan" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.register.RegisterActivity"
            android:exported="false"
            android:label="@string/title_activity_register"
            android:theme="@style/Theme.Smackmapandroid.NoActionBar"
            android:windowSoftInputMode="adjustResize|adjustPan" />
        <activity
            android:name=".ui.main.MainActivity"
            android:exported="true"
            android:foregroundServiceType="location"
            android:label="@string/title_activity_main"
            android:theme="@style/Theme.Smackmapandroid.NoActionBar" />
    </application>

</manifest>