<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="@dimen/standard_8"
    android:paddingEnd="@dimen/standard_8"
    tools:context="com.lovemap.lovemapandroid.ui.main.pages.DiscoverPageFragment2">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/discoverTitle"
                style="@style/TextAppearance.Widget.AppCompat.Toolbar.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/standard_8"
                android:layout_marginBottom="@dimen/standard_32"
                android:text="@string/discover_love_spots" />

            <fragment
                android:id="@+id/topSpotsWidget"
                android:name="com.lovemap.lovemapandroid.ui.main.lovespot.LoveSpotWidgetFragment"
                app:spot_widget_type="BEST"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/standard_32"/>

            <fragment
                android:id="@+id/hotSpotsWidget"
                android:name="com.lovemap.lovemapandroid.ui.main.lovespot.LoveSpotWidgetFragment"
                app:spot_widget_type="RECENTLY_ACTIVE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/standard_32"/>

            <fragment
                android:id="@+id/closestSpotsWidget"
                android:name="com.lovemap.lovemapandroid.ui.main.lovespot.LoveSpotWidgetFragment"
                app:spot_widget_type="CLOSEST"
                android:layout_marginBottom="@dimen/standard_32"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/search_button"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/standard_50"
                />

        </LinearLayout>
    </ScrollView>
</LinearLayout>