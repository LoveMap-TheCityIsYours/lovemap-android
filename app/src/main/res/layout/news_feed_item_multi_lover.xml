<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/myCardColor"
    android:animateLayoutChanges="true"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardElevation="8dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:padding="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_marginTop="16dp"
            android:paddingHorizontal="8dp"
            android:layout_marginHorizontal="8dp"
            android:id="@+id/newsFeedTextLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/newsFeedText"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/newsFeedOpenLoverImage"
                android:layout_alignParentStart="true"
                android:lineSpacingExtra="8sp"
                android:text="text"
                android:textColor="@color/myColorOnBackground" />

            <ImageView
                android:id="@+id/newsFeedOpenLoverImage"
                android:layout_marginEnd="8dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:src="@drawable/baseline_open_in_new_24"
                android:visibility="gone" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="16dp"
            android:paddingHorizontal="8dp"
            android:layout_marginHorizontal="8dp"
            android:id="@+id/newsFeedLoverLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_marginHorizontal="16dp"
                android:id="@+id/newsFeedLoverName1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_toStartOf="@+id/newsFeedOpenLoverImage1"
                android:layout_alignParentStart="true"
                android:textColor="@color/myColorOnBackground"
                android:textSize="18sp"
                android:layout_marginBottom="4dp"
                android:text="Lover1" />

            <ImageView
                android:id="@+id/newsFeedOpenLoverImage1"
                android:layout_marginEnd="8dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:src="@drawable/baseline_open_in_new_24"
                android:visibility="visible" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="4dp"
            android:paddingHorizontal="8dp"
            android:layout_marginHorizontal="8dp"
            android:id="@+id/newsFeedLoverLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_marginHorizontal="16dp"
                android:id="@+id/newsFeedLoverName2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_toStartOf="@+id/newsFeedOpenLoverImage2"
                android:layout_alignParentStart="true"
                android:textColor="@color/myColorOnBackground"
                android:textSize="18sp"
                android:layout_marginBottom="4dp"
                android:text="Lover2" />

            <ImageView
                android:id="@+id/newsFeedOpenLoverImage2"
                android:layout_marginEnd="8dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:src="@drawable/baseline_open_in_new_24"
                android:visibility="visible" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="4dp"
            android:paddingHorizontal="8dp"
            android:layout_marginHorizontal="8dp"
            android:id="@+id/newsFeedLoverLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_marginHorizontal="16dp"
                android:id="@+id/newsFeedLoverName3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_toStartOf="@+id/newsFeedOpenLoverImage3"
                android:layout_alignParentStart="true"
                android:textColor="@color/myColorOnBackground"
                android:textSize="18sp"
                android:layout_marginBottom="4dp"
                android:text="Lover3" />

            <ImageView
                android:id="@+id/newsFeedOpenLoverImage3"
                android:layout_marginEnd="8dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:src="@drawable/baseline_open_in_new_24"
                android:visibility="visible" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="4dp"
            android:paddingHorizontal="8dp"
            android:layout_marginHorizontal="8dp"
            android:id="@+id/newsFeedLoverLayout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_marginHorizontal="16dp"
                android:id="@+id/newsFeedLoverName4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_toStartOf="@+id/newsFeedOpenLoverImage4"
                android:layout_alignParentStart="true"
                android:textColor="@color/myColorOnBackground"
                android:textSize="18sp"
                android:layout_marginBottom="4dp"
                android:text="Lover4" />

            <ImageView
                android:id="@+id/newsFeedOpenLoverImage4"
                android:layout_marginEnd="8dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:src="@drawable/baseline_open_in_new_24"
                android:visibility="visible" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="4dp"
            android:paddingHorizontal="8dp"
            android:layout_marginHorizontal="8dp"
            android:id="@+id/newsFeedLoverLayout5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_marginHorizontal="16dp"
                android:id="@+id/newsFeedLoverName5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_toStartOf="@+id/newsFeedOpenLoverImage5"
                android:layout_alignParentStart="true"
                android:textColor="@color/myColorOnBackground"
                android:textSize="18sp"
                android:layout_marginBottom="4dp"
                android:text="Lover5" />

            <ImageView
                android:id="@+id/newsFeedOpenLoverImage5"
                android:layout_marginEnd="8dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:src="@drawable/baseline_open_in_new_24"
                android:visibility="visible" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="4dp"
            android:paddingHorizontal="8dp"
            android:layout_marginHorizontal="8dp"
            android:id="@+id/newsFeedLoverLayout6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_marginBottom="8dp"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_marginHorizontal="16dp"
                android:id="@+id/newsFeedLoverName6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_toStartOf="@+id/newsFeedOpenLoverImage6"
                android:layout_alignParentStart="true"
                android:textColor="@color/myColorOnBackground"
                android:textSize="18sp"
                android:layout_marginBottom="4dp"
                android:text="Lover6" />

            <ImageView
                android:id="@+id/newsFeedOpenLoverImage6"
                android:layout_marginEnd="8dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:src="@drawable/baseline_open_in_new_24"
                android:visibility="visible" />

        </RelativeLayout>


        <LinearLayout
            android:layout_marginBottom="16dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/newsFeedHappenedAt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="date" />

            <androidx.legacy.widget.Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/newsFeedCountry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Country" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>