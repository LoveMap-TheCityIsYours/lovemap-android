<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.lovemap.lovemapandroid.ui.main.pages.LovesPageFragment">

    <TextView
        android:id="@+id/lovesTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        style="@style/TextAppearance.Widget.AppCompat.Toolbar.Title"
        android:text="@string/your_loves"/>

    <fragment
        android:id="@+id/fragmentLovesLoveList"
        android:name="com.lovemap.lovemapandroid.ui.main.love.LoveListFragment"
        app:love_spot_based="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>