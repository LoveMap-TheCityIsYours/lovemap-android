<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardElevation="8dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/newsFeedItemType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Item Type" />

        <TextView
            android:id="@+id/newsFeedItemHappenedAt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Happened At" />

        <ImageView
            android:id="@+id/newsFeedPhotoLikePhoto"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginStart="@dimen/standard_8"
            android:layout_marginEnd="@dimen/standard_8"
            android:layout_weight="10"
            android:scaleType="centerInside"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>