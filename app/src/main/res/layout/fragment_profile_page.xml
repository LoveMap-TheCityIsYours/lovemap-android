<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.smackmap.smackmapandroid.ui.main.pages.ProfilePageFragment">


    <TextView
        android:id="@+id/profileTitle"
        style="@style/TextAppearance.Widget.AppCompat.Toolbar.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/text_margin"
        android:text="@string/your_profile" />

    <TextView
        style="?android:attr/weekSeparatorLineColor"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@color/design_default_color_primary_variant" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:context="com.smackmap.smackmapandroid.ui.main.ProfileFragment">

        <TextView
            android:id="@+id/profileUserName"
            style="@style/TextAppearance.AppCompat.Headline"
            android:gravity="start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginStart="@dimen/text_margin"
            android:text="@string/profileUserName" />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginEnd="@dimen/text_margin"
            android:layout_gravity="end"
            tools:context="com.smackmap.smackmapandroid.ui.main.ProfileFragment">

            <ImageView
                android:id="@+id/profilePublicImage"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:layout_margin="@dimen/text_margin"
                android:src="@drawable/ic_baseline_public_off_24" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/profilePublicToggle"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_toggle_off_24"/>

            <TextView
                android:id="@+id/profilePublicToggleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/privateProfile"
                />

        </LinearLayout>

    </LinearLayout>

    <TextView
        style="?android:attr/weekSeparatorLineColor"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="1dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@color/design_default_color_primary_variant" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:context="com.smackmap.smackmapandroid.ui.main.ProfileFragment">

        <ImageView
            android:id="@+id/profileUserLevelImage"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_margin="@dimen/text_margin"
            android:src="@drawable/ic_crown" />

        <TextView
            android:id="@+id/profileUserLevelText"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/text_margin"
            android:text="@string/profileUserLevelText" />

    </LinearLayout>

    <TextView
        style="?android:attr/weekSeparatorLineColor"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@color/design_default_color_primary_variant" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        tools:context="com.smackmap.smackmapandroid.ui.main.ProfileFragment">

        <TextView
            android:id="@+id/profileShareableLink"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_margin="@dimen/text_margin"
            android:clickable="true"
            android:focusable="true"
            style="@style/TextAppearance.AppCompat.Large"
            android:drawableLeft="@drawable/ic_baseline_share_24"
            android:text="@string/profileShareableLink"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/text_margin"
            android:gravity="center"
            tools:context="com.smackmap.smackmapandroid.ui.main.ProfileFragment">

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/profileShareableLinkToggle"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="@dimen/text_margin"
            android:src="@drawable/ic_baseline_toggle_off_24"/>

            <TextView
                android:id="@+id/profileShareableLinkToggleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/linkShareOff"
                />

        </LinearLayout>

    </LinearLayout>

    <TextView
        style="?android:attr/weekSeparatorLineColor"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@color/design_default_color_primary_variant" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        tools:context="com.smackmap.smackmapandroid.ui.main.ProfileFragment">

        <Button
            android:id="@+id/settings"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:drawableLeft="@drawable/ic_baseline_settings_24"
            android:text="@string/settings" />

        <Button
            android:id="@+id/logout"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:drawableLeft="@drawable/ic_baseline_exit_to_app_24"
            android:text="@string/logout" />
    </LinearLayout>


</LinearLayout>