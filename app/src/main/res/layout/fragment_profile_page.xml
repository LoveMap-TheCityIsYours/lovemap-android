<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    tools:context="com.lovemap.lovemapandroid.ui.main.pages.ProfilePageFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/profileTitle"
            style="@style/TextAppearance.Widget.AppCompat.Toolbar.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/text_margin"
            android:text="@string/your_profile" />

        <TextView
            style="?android:attr/weekSeparatorLineColor"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@color/separatorLine"
            android:gravity="center_horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="@dimen/text_margin"
                android:minWidth="200dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/profileUserName"
                    style="@style/TextAppearance.AppCompat.Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/text_margin"
                    android:layout_marginTop="20dp"
                    android:gravity="start"
                    android:inputType="textMultiLine"
                    android:maxWidth="280dp"
                    android:maxLines="2"
                    android:text="@string/profileUserName"
                    android:textColor="@color/myColorOnBackground" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/standard_8"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/text_margin"
                        android:layout_marginEnd="@dimen/standard_8"
                        android:text="@string/number_of_loves" />

                    <TextView
                        android:id="@+id/profileNumberOfLoves"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" - " />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/standard_4"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/text_margin"
                        android:layout_marginEnd="@dimen/standard_8"
                        android:text="@string/love_spots_added" />

                    <TextView
                        android:id="@+id/profileNumberOfLoveSpots"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" - " />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/standard_4"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/text_margin"
                        android:layout_marginEnd="@dimen/standard_8"
                        android:text="@string/reports_submitted" />

                    <TextView
                        android:id="@+id/profileReportsSubmitted"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" - " />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/standard_4"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/text_margin"
                        android:layout_marginEnd="@dimen/standard_8"
                        android:text="@string/reports_received" />

                    <TextView
                        android:id="@+id/profileReportsReceived"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" - " />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/standard_4"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/text_margin"
                        android:layout_marginEnd="@dimen/standard_8"
                        android:text="@string/meaningful_reviews" />

                    <TextView
                        android:id="@+id/profileMeaningfulReviews"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" - " />
                </LinearLayout>

            </LinearLayout>

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="@dimen/text_margin"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/profilePublicImage"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/text_margin"
                    android:src="@drawable/ic_baseline_public_off_24" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/profilePublicToggle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:enabled="false"
                    android:src="@drawable/ic_baseline_toggle_off_24" />

                <TextView
                    android:id="@+id/profilePublicToggleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/privateProfile" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            style="?android:attr/weekSeparatorLineColor"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:background="@color/separatorLine"
            android:gravity="center_horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:orientation="vertical">

                <TextView
                    style="@style/TextAppearance.AppCompat.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/standard_8"
                    android:layout_marginTop="@dimen/standard_8"
                    android:text="@string/profileRank" />

                <ImageView
                    android:id="@+id/profileUserLevelImage"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginTop="@dimen/standard_8"
                    android:layout_marginStart="@dimen/text_margin"
                    android:layout_marginEnd="@dimen/text_margin"
                    android:src="@drawable/ic_rank_svgrepo_com" />
            </LinearLayout>

            <TextView
                android:id="@+id/profileUserLevelText"
                style="@style/TextAppearance.AppCompat.Body2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:inputType="textMultiLine"
                android:maxWidth="150dp"
                android:maxLines="2"
                android:text="@string/profileUserLevelText" />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginStart="@dimen/standard_8"
                android:layout_marginEnd="@dimen/standard_8"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/standard_8"
                    android:text="@string/points" />

                <TextView
                    android:id="@+id/profilePoints"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/text_margin"
                    android:text=" - " />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/points_to_next_level" />

                <TextView
                    android:id="@+id/profilePointsToNextLevel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/text_margin"
                    android:text=" - " />

            </LinearLayout>

        </LinearLayout>

        <ProgressBar
            android:id="@+id/profileProgressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/standard_50"
            android:layout_marginEnd="@dimen/standard_50"
            android:layout_marginTop="@dimen/standard_8"
            android:layout_marginBottom="@dimen/standard_8"
            style="@android:style/Widget.Material.ProgressBar.Horizontal"
            />

        <TextView
            style="?android:attr/weekSeparatorLineColor"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@color/separatorLine"
            android:gravity="center_horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/profilePartnershipImage"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_margin="@dimen/text_margin"
                android:src="@drawable/ic_baseline_favorite_colorful_24" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/profilePartnershipWithText"
                    style="@style/TextAppearance.AppCompat.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="@dimen/text_margin"
                    android:text="@string/profileInPartnershipWith" />

                <TextView
                    android:id="@+id/profilePartners"
                    style="@style/TextAppearance.AppCompat.Body1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:inputType="textMultiLine"
                    android:maxWidth="280dp"
                    android:maxLines="2"
                    android:text="@string/profilePartnersEmpty" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            style="?android:attr/weekSeparatorLineColor"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@color/separatorLine"
            android:gravity="center_horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/text_margin"
                android:gravity="center"
                android:orientation="vertical">

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/profileShareableLinkToggle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tooltipText="@string/link_sharing_hint"
                    android:layout_marginHorizontal="@dimen/text_margin"
                    android:src="@drawable/ic_baseline_toggle_off_24" />

                <TextView
                    android:id="@+id/profileShareableLinkToggleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/linkShareOff" />
            </LinearLayout>

            <TextView
                android:id="@+id/profileShareableLink"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/standard_8"
                android:clickable="true"
                android:focusable="true"
                android:linksClickable="true"
                android:autoLink="web"
                android:inputType="textMultiLine"
                android:maxWidth="150dp"
                android:text="@string/profileShareableLink" />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />


            <ImageButton
                android:id="@+id/shareLinkButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/text_margin"
                android:backgroundTint="@color/myColorSecondary"
                android:src="@drawable/ic_baseline_share_24_primary" />

        </LinearLayout>

        <TextView
            android:id="@+id/profileShareDescription"
            android:animateLayoutChanges="true"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/standard_8"
            android:layout_marginStart="@dimen/standard_16"
            android:layout_marginEnd="@dimen/standard_16"
            android:text="@string/link_sharing_hint"
            />

        <TextView
            style="?android:attr/weekSeparatorLineColor"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@color/separatorLine"
            android:gravity="center_horizontal" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/standard_50"
            android:orientation="horizontal">

            <Button
                android:id="@+id/settings"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/text_margin"
                android:drawableLeft="@drawable/ic_baseline_settings_24"
                android:text="@string/settings" />

            <Button
                android:id="@+id/logout"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/text_margin"
                android:drawableLeft="@drawable/ic_baseline_exit_to_app_24"
                android:text="@string/logout" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>
