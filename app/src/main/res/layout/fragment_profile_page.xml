<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profileSwipeRefreshLayout"
    android:clickable="true"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.lovemap.lovemapandroid.ui.main.pages.ProfilePageFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/profileTitle"
                style="@style/TextAppearance.Widget.AppCompat.Toolbar.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/standard_8"
                android:layout_marginBottom="@dimen/standard_8"
                android:layout_gravity="center"
                android:text="@string/your_profile" />

            <TextView
                style="?android:attr/weekSeparatorLineColor"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@color/separatorLine"
                android:gravity="center_horizontal" />

            <LinearLayout
                android:clickable="true"
                android:focusableInTouchMode="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:clickable="true"
                    android:focusableInTouchMode="true"
                    android:layout_width="0dp"
                    android:layout_weight="6"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginBottom="@dimen/standard_8"
                    android:layout_marginEnd="@dimen/text_margin"
                    android:minWidth="200dp"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/profileDisplayName"
                        style="@style/TextAppearance.AppCompat.Medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/text_margin"
                        android:layout_marginTop="@dimen/standard_8"
                        android:textSize="20sp"
                        android:textAlignment="center"
                        android:inputType="textMultiLine|textCapWords"
                        android:scrollbars="vertical"
                        android:lines="2"
                        android:maxLines="2"
                        android:text="@string/profileUserName"
                        android:textColor="@color/myColorOnBackground" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/standard_8"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/text_margin"
                            android:layout_marginEnd="@dimen/standard_8"
                            android:text="@string/number_of_loves" />

                        <TextView
                            android:textColor="@color/myColorOnBackground"
                            android:id="@+id/profileNumberOfLoves"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" - " />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/standard_4"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/text_margin"
                            android:layout_marginEnd="@dimen/standard_8"
                            android:text="@string/love_spots_added" />

                        <TextView
                            android:id="@+id/profileNumberOfLoveSpots"
                            android:textColor="@color/myColorOnBackground"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" - " />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/standard_4"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/text_margin"
                            android:layout_marginEnd="@dimen/standard_8"
                            android:text="@string/reports_submitted" />

                        <TextView
                            android:id="@+id/profileReportsSubmitted"
                            android:textColor="@color/myColorOnBackground"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" - " />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/standard_4"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/text_margin"
                            android:layout_marginEnd="@dimen/standard_8"
                            android:text="@string/reports_received" />

                        <TextView
                            android:id="@+id/profileReportsReceived"
                            android:textColor="@color/myColorOnBackground"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" - " />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/standard_4"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/text_margin"
                            android:layout_marginEnd="@dimen/standard_8"
                            android:text="@string/meaningful_reviews" />

                        <TextView
                            android:id="@+id/profileMeaningfulReviews"
                            android:textColor="@color/myColorOnBackground"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" - " />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/standard_4"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/text_margin"
                            android:layout_marginEnd="@dimen/standard_8"
                            android:text="@string/hof_position" />

                        <TextView
                            android:id="@+id/profileHofPosition"
                            android:textColor="@color/myColorOnBackground"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" - " />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/standard_4"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/text_margin"
                            android:layout_marginEnd="@dimen/standard_8"
                            android:text="@string/photos_uploaded" />

                        <TextView
                            android:id="@+id/profilePhotosUploaded"
                            android:textColor="@color/myColorOnBackground"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" - " />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/standard_4"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/text_margin"
                            android:layout_marginEnd="@dimen/standard_8"
                            android:text="@string/photo_likes" />

                        <TextView
                            android:id="@+id/profilePhotoLikes"
                            android:textColor="@color/myColorOnBackground"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" - " />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/standard_4"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/text_margin"
                            android:layout_marginEnd="@dimen/standard_8"
                            android:text="@string/photo_dislikes" />

                        <TextView
                            android:id="@+id/profilePhotoDislikes"
                            android:textColor="@color/myColorOnBackground"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" - " />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/standard_4"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/text_margin"
                            android:layout_marginEnd="@dimen/standard_8"
                            android:text="@string/joined_at" />

                        <TextView
                            android:id="@+id/profileCreatedAt"
                            android:textColor="@color/myColorOnBackground"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" - " />
                    </LinearLayout>

                </LinearLayout>

                <androidx.legacy.widget.Space
                    android:clickable="true"
                    android:focusableInTouchMode="true"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5" />

                <LinearLayout
                    android:clickable="true"
                    android:focusableInTouchMode="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginEnd="@dimen/text_margin"
                    android:orientation="vertical">

                    <ImageView
                        android:clickable="true"
                        android:focusableInTouchMode="true"
                        android:id="@+id/profilePublicImage"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/standard_8"
                        android:layout_marginHorizontal="@dimen/standard_8"
                        android:src="@drawable/ic_baseline_public_off_24" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/profilePublicToggle"
                        android:theme="@style/ToggleSwitchTheme"
                        android:thumb="@drawable/switch_thumb_selector_small"
                        app:track="@drawable/switch_track_selector_small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_baseline_toggle_off_24" />

                    <TextView
                        android:id="@+id/profilePublicToggleText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/private_profile" />

                    <TextView
                        style="?android:attr/weekSeparatorLineColor"
                        android:layout_width="match_parent"
                        android:layout_marginTop="@dimen/standard_8"
                        android:layout_marginBottom="@dimen/standard_8"
                        android:layout_height="1dp"
                        android:background="@color/separatorLine"
                        android:gravity="center_horizontal" />

                    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                        android:id="@+id/followingFab"
                        android:layout_marginTop="@dimen/standard_8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/standard_4"
                        app:icon="@drawable/follow"
                        app:iconGravity="start" />

                    <LinearLayout
                        android:gravity="center_horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/standard_4"
                            android:text="@string/followings" />

                        <TextView
                            android:id="@+id/profileNumberOfFollowings"
                            android:textColor="@color/myColorOnBackground"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" - " />
                    </LinearLayout>

                    <TextView
                        style="?android:attr/weekSeparatorLineColor"
                        android:layout_marginTop="@dimen/standard_8"
                        android:layout_marginBottom="@dimen/standard_8"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/separatorLine"
                        android:gravity="center_horizontal" />

                    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                        android:id="@+id/followersFab"
                        android:layout_marginTop="@dimen/standard_8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/standard_4"
                        app:icon="@drawable/followers1"
                        app:iconGravity="start" />

                    <LinearLayout
                        android:gravity="center_horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/standard_4"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/standard_4"
                            android:text="@string/followers" />

                        <TextView
                            android:id="@+id/profileNumberOfFollowers"
                            android:textColor="@color/myColorOnBackground"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" - " />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <TextView
                style="?android:attr/weekSeparatorLineColor"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:background="@color/separatorLine"
                android:gravity="center_horizontal" />

            <LinearLayout
                android:clickable="true"
                android:focusableInTouchMode="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:clickable="true"
                    android:focusableInTouchMode="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:orientation="vertical">

                    <TextView
                        style="@style/TextAppearance.AppCompat.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/standard_8"
                        android:layout_marginTop="@dimen/standard_8"
                        android:text="@string/profileRank" />

                    <ImageView
                        android:id="@+id/profileUserLevelImage"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_marginTop="@dimen/standard_8"
                        android:layout_marginStart="@dimen/text_margin"
                        android:layout_marginEnd="@dimen/text_margin"
                        android:src="@drawable/ic_rank_svgrepo_com" />
                </LinearLayout>

                <TextView
                    android:clickable="true"
                    android:id="@+id/current_rank"
                    style="@style/TextAppearance.AppCompat.Body2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/myColorOnBackground"
                    android:inputType="textMultiLine"
                    android:maxWidth="150dp"
                    android:maxLines="2"
                    android:text="@string/profileUserLevelText" />

                <androidx.legacy.widget.Space
                    android:clickable="true"
                    android:focusableInTouchMode="true"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5" />

                <LinearLayout
                    android:clickable="true"
                    android:focusableInTouchMode="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginStart="@dimen/standard_8"
                    android:layout_marginEnd="@dimen/standard_8"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/standard_8"
                        android:text="@string/points" />

                    <TextView
                        android:id="@+id/profilePoints"
                        android:textColor="@color/myColorOnBackground"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/text_margin"
                        android:text=" - " />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxWidth="@dimen/standard_125"
                        android:text="@string/points_to_next_level" />

                    <TextView
                        android:id="@+id/profilePointsToNextLevel"
                        android:textColor="@color/myColorOnBackground"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/text_margin"
                        android:text=" - " />

                </LinearLayout>

            </LinearLayout>

            <ProgressBar
                android:clickable="true"
                android:focusableInTouchMode="true"
                android:id="@+id/profileProgressBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/standard_50"
                android:layout_marginEnd="@dimen/standard_50"
                android:layout_marginTop="@dimen/standard_8"
                android:layout_marginBottom="@dimen/standard_8"
                style="@android:style/Widget.Material.ProgressBar.Horizontal"
                />

            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/profileHallOfFameFab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/hall_of_fame"
                android:layout_marginBottom="@dimen/standard_8"
                app:icon="@drawable/podium_svgrepo_com_2"
                app:iconGravity="start" />

            <TextView
                style="?android:attr/weekSeparatorLineColor"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@color/separatorLine"
                android:gravity="center_horizontal" />

            <LinearLayout
                android:clickable="true"
                android:focusableInTouchMode="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:clickable="true"
                    android:focusableInTouchMode="true"
                    android:id="@+id/profilePartnershipImage"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_margin="@dimen/text_margin"
                    android:src="@drawable/ic_two_hearts_purple" />

                <LinearLayout
                    android:clickable="true"
                    android:focusableInTouchMode="true"
                    android:id="@+id/profilePartnerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/profilePartnershipWithText"
                        android:clickable="false"
                        style="@style/TextAppearance.AppCompat.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="@dimen/standard_16"
                        android:layout_marginStart="@dimen/standard_16"
                        android:layout_marginBottom="@dimen/standard_4"
                        android:text="@string/profileInPartnershipWith" />

                    <TextView
                        android:id="@+id/profilePartnerName"
                        android:clickable="false"
                        style="@style/TextAppearance.Material3.BodyLarge"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:inputType="textMultiLine"
                        android:textSize="18sp"
                        android:maxWidth="280dp"
                        android:maxLines="2"
                        android:text="@string/profilePartnersEmpty" />

                    <TextView
                        android:id="@+id/profilePartnerRelation"
                        android:clickable="false"
                        style="@style/TextAppearance.AppCompat.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:visibility="invisible"
                        android:inputType="textMultiLine"
                        android:maxWidth="280dp"
                        android:maxLines="2"
                        android:text="@string/profilePartnersEmpty" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                style="?android:attr/weekSeparatorLineColor"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@color/separatorLine"
                android:gravity="center_horizontal" />

            <LinearLayout
                android:clickable="true"
                android:focusableInTouchMode="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:clickable="true"
                    android:focusableInTouchMode="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="16dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/profileShareableLinkToggle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:tooltipText="@string/link_sharing_hint"
                        android:layout_marginHorizontal="@dimen/text_margin"
                        android:src="@drawable/ic_baseline_toggle_off_24" />

                    <TextView
                        android:id="@+id/profileShareableLinkToggleText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/linkShareOff" />

                    <ImageButton
                        android:id="@+id/linkSharingInfoButton"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="@dimen/standard_8"
                        android:layout_gravity="center"
                        android:backgroundTint="@color/background_color"
                        android:src="@drawable/ic_baseline_info_24" />

                </LinearLayout>

                <TextView
                    android:id="@+id/profileShareableLink"
                    style="@style/TextAppearance.AppCompat.Body1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/standard_8"
                    android:clickable="true"
                    android:focusable="true"
                    android:linksClickable="true"
                    android:autoLink="web"
                    android:inputType="textMultiLine"
                    android:maxWidth="150dp"
                    android:text="@string/profileShareableLink" />

                <androidx.legacy.widget.Space
                    android:clickable="true"
                    android:focusableInTouchMode="true"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />


                <ImageButton
                    android:id="@+id/shareLinkButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/text_margin"
                    android:backgroundTint="@color/myColorSecondary"
                    android:src="@drawable/ic_baseline_share_24_primary" />

            </LinearLayout>

            <TextView
                style="?android:attr/weekSeparatorLineColor"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@color/separatorLine"
                android:gravity="center_horizontal" />

            <TextView
                android:text="@string/your_activities"
                android:layout_marginTop="@dimen/standard_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.AppCompat.Large"
                android:layout_gravity="center_horizontal"
                />

            <com.lovemap.lovemapandroid.ui.customviews.NestedScrollableHost
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:layout_marginTop="@dimen/standard_16"
                android:layout_marginBottom="@dimen/standard_16"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <LinearLayout
                    android:id="@+id/profileNewsFeedContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />

            </com.lovemap.lovemapandroid.ui.customviews.NestedScrollableHost>

            <TextView
                style="?android:attr/weekSeparatorLineColor"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="@dimen/standard_50"
                android:background="@color/separatorLine"
                android:gravity="center_horizontal" />

            <TextView
                style="?android:attr/weekSeparatorLineColor"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@color/separatorLine"
                android:gravity="center_horizontal" />

            <LinearLayout
                android:clickable="true"
                android:focusableInTouchMode="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/standard_50"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/settings"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:lines="2"
                    android:layout_margin="@dimen/text_margin"
                    android:drawableLeft="@drawable/ic_baseline_settings_24"
                    android:text="@string/settings" />

                <Button
                    android:id="@+id/logout"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:lines="2"
                    android:layout_margin="@dimen/text_margin"
                    android:drawableLeft="@drawable/ic_baseline_exit_to_app_24"
                    android:text="@string/logout" />
            </LinearLayout>

        </LinearLayout>
